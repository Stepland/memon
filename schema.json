{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "memon",
    "description": "A jubeat chart set description format based on json",
    "type": "object",
    "properties": {
        "version": {
            "description": "The version string for the schema format",
            "const": "1.0.0"
        },
        "metadata": {
            "description": "Contains information that applies to the whole set of charts",
            "type": "object",
            "properties": {
                "title": {
                    "description": "The title of the song",
                    "type": "string"
                },
                "artist": {
                    "description": "The song artist",
                    "type": "string"
                },
                "audio": {
                    "description": "Path to the music file, relative to the memon file",
                    "type": "string"
                },
                "jacket": {
                    "description": "Path to the album cover, relative to the memon file",
                    "type": "string"
                },
                "BPM": {
                    "description": "Song tempo in Beats per Minute",
                    "type": "number",
                    "exclusiveMinimum": 0
                },
                "offset": {
                    "description": "In seconds, opposite of the time position of the first beat in the music file",
                    "type": "number"
                },
                "preview": {
                    "description": "Describes the part of the music file that's to be played on loop when previewing this song",
                    "oneOf": [{
                            "description": "Preview defined as a sample from the music file",
                            "type": "object",
                            "properties": {
                                "start": {
                                    "description": "In seconds, Time at which preview should start",
                                    "type": "number",
                                    "minimum": 0
                                },
                                "duration": {
                                    "description": "In seconds, for how long should the preview be played past the starting point",
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "required": ["start", "duration"]
                        },
                        {
                            "description": "Preview defined as a separate audio file",
                            "type": "string"
                        }
                    ]
                }
            },
            "required": ["title", "artist", "BPM", "offset"]
        },
        "data": {
            "description": "Charts with difficulty names used as keys",
            "type": "object",
            "additionalProperties": {
                "description": "A chart",
                "type": "object",
                "properties": {
                    "level": {
                        "description": "Level rating of the chart, typically goes from 0 to 10 in jubeat",
                        "type": "integer"
                    },
                    "resolution": {
                        "description": "Tempo resolution, number of \"ticks\" in a beat",
                        "type": "integer",
                        "exclusiveMinimum": 0
                    },
                    "notes": {
                        "description": "The array of notes",
                        "type": "array",
                        "items": {
                            "description": "A single note",
                            "type": "object",
                            "properties": {
                                "n": {
                                    "description": "Position, left to right, top to bottom",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 15
                                },
                                "t": {
                                    "description": "Note time",
                                    "oneOf": [{
                                            "description": "Time measured in \"ticks\" as specified with the resolution",
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        {
                                            "$ref": "#/$defs/timeFraction"
                                        }
                                    ]
                                },
                                "l": {
                                    "description": "Long note duration",
                                    "oneOf": [{
                                            "description": "Long Note Lenght in ticks",
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        {
                                            "$ref": "#/$defs/nonZeroTimeFraction"
                                        }
                                    ]
                                },
                                "p": {
                                    "description": "Tail starting position, relative to note position, counting from 0 to 11 clockwise and expanding out starting one square above the note",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 11
                                }
                            },
                            "required": ["n", "t"],
                            "dependentRequired": {
                                "l": ["p"],
                                "p": ["l"]
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "required": ["level", "resolution", "notes"]
            }
        }
    },
    "required": ["version", "metadata", "data"],
    "$defs": {
        "timeFraction": {
            "description": "Time represented as a fraction",
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "prefixItems": [{
                    "description": "Integral part",
                    "type": "integer",
                    "minimum": 0
                },
                {
                    "description": "Numerator",
                    "type": "integer",
                    "minimum": 0
                },
                {
                    "description": "Denominator",
                    "type": "integer",
                    "minimum": 1
                }
            ]
        },
        "nonZeroTimeFraction": {
            "description": "Non-zero time represented as a fraction",
            "allOf": [{
                    "$ref": "#/$defs/timeFraction"
                },
                {
                    "not": {
                        "prefixItems": [{
                                "const": 0
                            },
                            {
                                "const": 0
                            },
                            true
                        ]
                    }
                }
            ]
        }
    }
}